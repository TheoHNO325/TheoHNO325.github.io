#include <iostream>
#include <cstring>
#include <stdio.h>

using namespace std;

class Student
{
public:
    char num[6];
    string name;
    float score;
    Student()
    {
        name = "";
        score = 0;
    } // 类数组构造函数的缺省
    Student(char n[], string nn, float s)
    {
        strcpy(num, n);
        name = nn;
        score = s;
    } // 重载
    void Show()
    {
        cout << name << " " << num << endl;
    }
};

int main()
{
    int N;
    cin >> N;
    char num[6];
    string name;
    float score;
    Student stu[N];
    double total = 0; // double +初始化
    for (int i = 0; i < N; i++)
    {
        cin >> num >> name >> score;
        stu[i] = Student(num, name, score);
        total += stu[i].score;
    }

    double ave = total / N; 
    printf("%.2f\n", ave);
    Student *p;
    p = stu;
    for (int i = 0; i < N; i++)
    {
        if (p->score < ave)
        {
            p->Show();
        }
        p++;
    }

    return 0;
}

// 总结:遇到精度问题用double,记得初始化!!!

